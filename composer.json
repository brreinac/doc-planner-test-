{
  "name": "brreinac/doc-planner-test",
  "description": "Refactor exercise â€” Doctor slots synchronizer (framework-agnostic, PHPUnit)",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1.9",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --colors=always",
    "cs": "vendor/bin/php-cs-fixer fix --diff --dry-run",
    "phpstan": "vendor/bin/phpstan analyse -l 7 src tests || true",
    "post-install-cmd": [
      "@composer dump-autoload -o"
    ],
    "post-update-cmd": [
      "@composer dump-autoload -o"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "8.1.0"
    }
  }
}
